@{

    var list_last = @Model.Products.GroupBy(p => p.IdCate).Select(g => g.Last()).ToList();
    // var list_last = @Model.Products.TakeLast(8).ToList();
    var list_first = @Model.Products.GroupBy(p => p.IdCate).Select(g => g.First()).ToList();


}
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Danh mục sản phẩm</span>
    </h2>

    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model.Categories)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="/@item.Link-@item.IdCate">
                    <div class="cat-item d-flex align-items-center mb-4">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="~/img/Sản Phẩm/@item.Img" alt="">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6>@item.CateName</h6>
                            <small class="text-body">@Model.Products.Count(p => p.IdCate == item.IdCate) Products</small>
                        </div>
                    </div>
                </a>
            </div>
        }


